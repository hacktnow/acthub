{
    "name": "acthub",
    "version": "1.0.0",
    "description": "A place for open-source activist tech projects",
    "main": "index.js",
    "author": "Hackt Now",
    "license": "MIT",
    "scripts": {
        "deploy-staging": "script/deploy staging",
        "deploy-production": "script/deploy production",
        "check-travis-builds": "open -a \"Google Chrome\" https://travis-ci.com/hacktnow/acthub",
        "open-deployed-staging": "open -a \"Google Chrome\" https://acthub-staging.herokuapp.com/",
        "open-deployed-production": "open -a \"Google Chrome\" https://acthub.herokuapp.com/",
        "heroku-db-production": "heroku pg:psql -a acthub",
        "heroku-db-staging": "heroku pg:psql -a acthub-staging",
        "heroku-logs-production": "heroku logs | grep -i error -a acthub",
        "heroku-logs-live-production": "heroku logs -t | grep 'error' -a acthub",
        "heroku-logs-staging": "heroku logs | grep -i error -a acthub-staging",
        "heroku-logs-live-staging": "heroku logs -t | grep 'error' -a acthub-staging",
        "lint": "eslint ./ --ignore-path .gitignore",
        "lint-fix": "npm run lint -- --fix",
        "prepare": "if [ -d .git ]; then npm-merge-driver install; fi",
        "seed": "node script/seed.js",
        "start": "node server",
        "start-dev": "NODE_ENV='development' webpack -w & NODE_ENV='development' npm run start-server",
        "start-server": "nodemon server -e html,js,scss --ignore public --ignore client",
        "test": "NODE_ENV='test' mocha \"./**/*.spec.js\" --require @babel/polyfill --require @babel/register"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "npm run lint-fix"
        ]
    },
    "dependencies": {
        "axios": "^0.21.1",
        "compression": "^1.7.4",
        "connect-session-sequelize": "^6.1.1",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "history": "^4.10.1",
        "morgan": "^1.10.0",
        "passport": "^0.4.1",
        "passport-google-oauth": "^2.0.0",
        "pg": "^8.2.1",
        "pg-hstore": "^2.3.3",
        "prop-types": "^15.7.2",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-redux": "^7.2.0",
        "react-router-dom": "^5.2.0",
        "redux": "^4.0.5",
        "redux-logger": "^3.0.6",
        "redux-thunk": "^2.3.0",
        "sequelize": "^5.21.11",
        "socket.io": "^2.3.0"
    },
    "devDependencies": {
        "@babel/core": "^7.10.2",
        "@babel/plugin-proposal-class-properties": "^7.10.1",
        "@babel/plugin-proposal-decorators": "^7.10.1",
        "@babel/plugin-proposal-export-namespace-from": "^7.10.1",
        "@babel/plugin-proposal-function-sent": "^7.10.1",
        "@babel/plugin-proposal-json-strings": "^7.10.1",
        "@babel/plugin-proposal-numeric-separator": "^7.10.1",
        "@babel/plugin-proposal-throw-expressions": "^7.10.1",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/plugin-syntax-import-meta": "^7.10.1",
        "@babel/polyfill": "^7.10.1",
        "@babel/preset-env": "^7.10.2",
        "@babel/preset-react": "^7.10.1",
        "@babel/register": "^7.10.1",
        "axios-mock-adapter": "^1.18.1",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.1.0",
        "chai": "^4.2.0",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.2",
        "eslint": "^5.16.0",
        "eslint-config-fullstack": "^6.0.0",
        "eslint-plugin-react": "^7.20.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.8",
        "mocha": "^7.2.0",
        "nodemon": "^2.0.4",
        "npm-merge-driver": "^2.3.6",
        "redux-devtools-extension": "^2.13.8",
        "redux-mock-store": "^1.5.4",
        "supertest": "^4.0.2",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11"
    }
}
